<Window x:Class="UltScan.TextOverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="True"
        Background="Transparent">

    <!-- Полупрозрачная "карточка", чтобы текст читался -->
    <Border Background="#99444444"
            CornerRadius="10"
            BorderBrush="#66000000"
            BorderThickness="1"
            Padding="10">

        <TextBox x:Name="Editor"
                 FontSize="16"
                 Foreground="Black"
                 Background="Transparent"
                 BorderThickness="0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True"
                 IsHitTestVisible="False"
                 Focusable="False"/>
    </Border>
</Window>
